<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Script file="KRFWidgets.lua"/>
	<CheckButton name="KRFCheckboxWidget" inherits="OptionsBaseCheckButtonTemplate" virtual="true">
		<Layers>
			<Layer level="ARTWORK">
			<FontString inherits="GameFontHighlightLeft" parentKey="Text">
				<Anchors>
				<Anchor point="LEFT" relativePoint="RIGHT">
					<Offset>
					<AbsDimension x="2" y="1"/>
					</Offset>
				</Anchor>
				</Anchors>
			</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad function="KRFCheckboxWidget_OnLoad"/>
			<OnClick function="KRFCheckboxWidget_OnClick"/>
			<OnEnter function="KRFCheckboxWidget_OnEnter"/>
			<OnLeave function="KRFCheckboxWidget_OnLeave"/>
		</Scripts>
	</CheckButton>
	<CheckButton name="KRFColorWidget" inherits="KRFCheckboxWidget" virtual="true">
		<Scripts>
			<OnLoad function="KRFColorWidget_OnLoad"/>
			<OnClick function="KRFColorWidget_OnClick"/>
			<OnEnter function="KRFColorWidget_OnEnter"/>
			<OnLeave function="KRFColorWidget_OnLeave"/>
		</Scripts>
	</CheckButton>
	<Slider name="KRFSliderWidget" inherits="OptionsSliderTemplate" virtual="true">
		<Scripts>
			<OnLoad function="KRFSliderWidget_OnLoad"/>
			<OnValueChanged function="KRFSliderWidget_OnValueChanged"/>
			<OnEnter function="KRFSliderWidget_OnEnter"/>
			<OnLeave function="KRFSliderWidget_OnLeave"/>
		</Scripts>
	</Slider>
	<CheckButton name="KRFHeadingWidget" inherits="OptionsBaseCheckButtonTemplate" virtual="true">
		<Size x="100" y="40" />
		<Anchors>
			<Anchor point="LEFT" relativeTo="$parent" relativePoint="LEFT"><Offset x="20" y="0"/></Anchor>
			<Anchor point="RIGHT" relativeTo="$parent" relativePoint="RIGHT"><Offset x="0" y="0"/></Anchor>
		</Anchors>
		<Scripts>
			<OnLoad function="KRFHeadingWidget_OnLoad"/>
			<OnClick function="KRFHeadingWidget_OnClick"/>
		</Scripts>
	</CheckButton>
