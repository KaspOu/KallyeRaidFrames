									<Anchor point="TOPLEFT" relativeKey="$parent.WhatsNew" relativePoint="BOTTOMLEFT">
										<Offset x="0" y="-25"/>
									</Anchor>
								</Anchors>
								<Scripts>
									<OnLoad>
										self.Text:SetText(KRFUI.l.OPTION_RESET_OPTIONS);
