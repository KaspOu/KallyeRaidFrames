			<!-- -->
			<CheckButton parentKey="FlickerWarning" inherits="KRFUI_TextWidget">
				<Attributes>
					<Attribute name="text" value="OPTION_BUFFS_FLICKERWARNING" />
				</Attributes>
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.BuffsOrientation" relativePoint="BOTTOMLEFT"><Offset x="0" y="-29" /></Anchor>
				</Anchors>
			</CheckButton>
			<Button parentKey="Reset" inherits="UIPanelButtonTemplate">
				<Size x="200" y="20" />
				<Anchors>
					<Anchor point="TOP" relativeKey="$parent.FlickerWarning"><Offset x="0" y="-35"/></Anchor>
					<Anchor point="RIGHT" relativeTo="$parent"><Offset x="0" y="0"/></Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						self.Text:SetText(KRFUI.l.OPTION_BUFFS_RESET);
					</OnLoad>
					<OnClick>
						KRFUI.ResetOptions({
							"MaxBuffs",
							"BuffsPerLine",
							"BuffsOrientation",
							"BuffsPosX",
							"BuffsPosY",
							"MaxDebuffs",
							"DebuffsPerLine",
							"DebuffsOrientation",
							"DebuffsPosX",
							"DebuffsPosY"
						}, {
							MaxBuffs = 3
						})
